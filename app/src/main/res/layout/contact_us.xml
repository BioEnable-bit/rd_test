<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/contact_call_icon"
        app:srcCompat="@drawable/ic_call_blue_24dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/contact_us_call"
        app:layout_constraintTop_toTopOf="@+id/contact_us_call"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/contact_us_call"
        android:text="@string/support_contact"
        android:textSize="14sp"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/contact_call_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/contact_email_icon"
        app:srcCompat="@drawable/ic_email_black_24dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/contact_us_email"
        app:layout_constraintTop_toTopOf="@+id/contact_us_email"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/contact_us_email"
        android:text="@string/support_email"
        android:textSize="14sp"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/contact_email_icon"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_call"/>

</androidx.constraintlayout.widget.ConstraintLayout>